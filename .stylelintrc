{
  "extends": "stylelint-config-standard",
  "ignoreFiles": [
    "src/user/scss/generic/*.scss",
    "src/user/scss/trumps/*.scss",
    "src/user/scss/tools/*.scss",
    "src/admin/scss/generic/*.scss",
    "src/admin/scss/trumps/*.scss",
    "src/admin/scss/tools/*.scss",
  ],
  rules: {
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": ["function", "if", "each", "include", "mixin"]
    }],
    "no-descending-specificity": null
  }
}